/* pages/laboratory-list/laboratory-list.wxss */
.container {
  background: #f5f7fa;
  min-height: 100vh;
  padding-bottom: 20rpx;
}

/* 搜索栏 */
.search-bar {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 20rpx;
  background: #fff;
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.search-input {
  flex: 1;
  display: flex;
  align-items: center;
  background: #f5f7fa;
  border-radius: 40rpx;
  padding: 16rpx 24rpx;
}

.search-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  opacity: 0.5;
}

.search-input input {
  flex: 1;
  font-size: 28rpx;
}

.clear-icon {
  font-size: 32rpx;
  color: #999;
  padding: 0 8rpx;
}

.filter-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.filter-icon {
  font-size: 20rpx;
}

/* 筛选面板 */
.filter-panel {
  background: #fff;
  padding: 30rpx;
  margin: 0 20rpx 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.filter-group {
  margin-bottom: 30rpx;
}

.filter-group:last-of-type {
  margin-bottom: 0;
}

.filter-label {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.filter-options {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.filter-option {
  padding: 12rpx 32rpx;
  background: #f5f7fa;
  border-radius: 40rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.3s;
}

.filter-option.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.filter-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 30rpx;
}

.btn-reset,
.btn-confirm {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 28rpx;
  border: none;
}

.btn-reset {
  background: #f5f7fa;
  color: #666;
}

.btn-confirm {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

/* 实验室列表 */
.lab-list {
  padding: 0 20rpx;
}

.lab-card {
  display: flex;
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s;
}

.lab-card:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.lab-image {
  width: 240rpx;
  height: 240rpx;
  flex-shrink: 0;
}

.lab-info {
  flex: 1;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.lab-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.lab-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.lab-status {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  flex-shrink: 0;
}

.lab-status.status-1 {
  background: rgba(82, 196, 26, 0.1);
}

.lab-status.status-0 {
  background: rgba(255, 152, 0, 0.1);
}

.lab-status.status-2 {
  background: rgba(153, 153, 153, 0.1);
}

.status-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
}

.status-1 .status-dot {
  background: #52c41a;
}

.status-0 .status-dot {
  background: #ff9800;
}

.status-2 .status-dot {
  background: #999;
}

.status-text {
  font-size: 22rpx;
}

.status-1 .status-text {
  color: #52c41a;
}

.status-0 .status-text {
  color: #ff9800;
}

.status-2 .status-text {
  color: #999;
}

.lab-code {
  font-size: 24rpx;
  color: #999;
}

.lab-location {
  font-size: 26rpx;
  color: #666;
}

.lab-meta {
  display: flex;
  gap: 24rpx;
}

.lab-capacity,
.lab-type {
  font-size: 24rpx;
  color: #999;
}

.lab-description {
  font-size: 26rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.lab-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 8rpx;
}

.lab-equipment {
  font-size: 24rpx;
  color: #999;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.lab-arrow {
  font-size: 32rpx;
  color: #667eea;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
}

.empty-icon {
  font-size: 160rpx;
  opacity: 0.3;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.btn-refresh {
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 35rpx;
  font-size: 28rpx;
  border: none;
}

/* 加载状态 */
.loading-state {
  display: flex;
  justify-content: center;
  padding: 60rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 加载更多 */
.load-more {
  display: flex;
  justify-content: center;
  padding: 40rpx 0;
}

.load-more-text {
  font-size: 28rpx;
  color: #667eea;
  padding: 16rpx 48rpx;
  border: 2rpx solid #667eea;
  border-radius: 40rpx;
}

.no-more {
  display: flex;
  justify-content: center;
  padding: 40rpx 0;
}

.no-more-text {
  font-size: 28rpx;
  color: #999;
}
