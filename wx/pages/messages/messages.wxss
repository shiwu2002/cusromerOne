/* pages/messages/messages.wxss */
.messages-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 20rpx;
}

/* 未读消息横幅 */
.unread-banner {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 24rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.2);
}

.unread-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.unread-icon {
  font-size: 44rpx;
  margin-right: 16rpx;
}

.unread-text {
  color: #fff;
  font-size: 28rpx;
  font-weight: 500;
}

.mark-all-btn {
  background-color: rgba(255, 255, 255, 0.2);
  color: #fff;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 30rpx;
  padding: 8rpx 24rpx;
  font-size: 24rpx;
}

/* 分类标签导航 */
.category-tabs {
  background-color: #fff;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  position: sticky;
  top: 0;
  z-index: 10;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.tab-scroll {
  white-space: nowrap;
  height: 80rpx;
}

.tab-item {
  display: inline-flex;
  align-items: center;
  padding: 0 28rpx;
  margin: 0 10rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background-color: #f8f9fa;
  color: #666;
  font-size: 24rpx;
  transition: all 0.35s cubic-bezier(0.4, 0, 0.2, 1);
  border: 1rpx solid transparent;
}

.tab-item:first-child {
  margin-left: 20rpx;
}

.tab-item:last-child {
  margin-right: 20rpx;
}

.tab-item.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-color: #667eea;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
  transform: translateY(-1rpx);
}

.tab-item:active {
  transform: scale(0.95);
}

.tab-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.tab-name {
  font-weight: 500;
  margin-right: 8rpx;
}

.tab-count {
  background-color: rgba(255, 255, 255, 0.2);
  color: inherit;
  padding: 2rpx 8rpx;
  border-radius: 10rpx;
  font-size: 20rpx;
  min-width: 32rpx;
  text-align: center;
}

.tab-item.active .tab-count {
  background-color: rgba(255, 255, 255, 0.3);
}

/* 消息列表 */
.message-list {
  padding: 0 30rpx;
}

.message-item {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-top: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.message-item.unread {
  border-left: 6rpx solid #07c160;
}

.message-item.read {
  opacity: 0.85;
}

/* 优先级样式 */
.message-item.priority-high {
  border-left: 6rpx solid #ff5252;
  background: linear-gradient(90deg, rgba(255,255,255,1) 0%, rgba(255,239,239,0.1) 100%);
}

.message-item.priority-medium {
  border-left: 6rpx solid #ffa726;
  background: linear-gradient(90deg, rgba(255,255,255,1) 0%, rgba(255,248,225,0.1) 100%);
}

.message-item.priority-low {
  border-left: 6rpx solid #66bb6a;
}

.message-item.priority-normal {
  border-left: 6rpx solid #90a4ae;
}

.message-type-badge.type-approval {
  background-color: #e3f2fd;
  color: #1565c0;
}

.message-type-badge.type-system {
  background-color: #e8f5e9;
  color: #2e7d32;
}

.message-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 消息头部 */
.message-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.message-info-left {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.message-info-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  text-align: right;
}

.message-type-badge {
  display: flex;
  align-items: center;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
}

.priority-indicator {
  font-size: 24rpx;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
}

.message-type-badge.type-RESERVATION_CREATED {
  background-color: #e8f5e9;
  color: #2e7d32;
}

.message-type-badge.type-RESERVATION_APPROVED {
  background-color: #e3f2fd;
  color: #1565c0;
}

.message-type-badge.type-RESERVATION_REJECTED {
  background-color: #ffebee;
  color: #c62828;
}

.message-type-badge.type-RESERVATION_CANCELLED {
  background-color: #fff3e0;
  color: #e65100;
}

.message-type-badge.type-RESERVATION_COMPLETED {
  background-color: #f3e5f5;
  color: #6a1b9a;
}

.message-type-badge.type-SYSTEM {
  background-color: #e0f2f1;
  color: #00695c;
}

.type-icon {
  margin-right: 6rpx;
  font-size: 24rpx;
}

.type-text {
  font-weight: 500;
}

.message-time {
  color: #999;
  font-size: 22rpx;
  margin-bottom: 4rpx;
}

.sender-info {
  color: #666;
  font-size: 20rpx;
}

/* 消息标题 */
.message-title {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.unread-dot {
  width: 12rpx;
  height: 12rpx;
  background-color: #ff5722;
  border-radius: 50%;
  margin-right: 12rpx;
  flex-shrink: 0;
}

.title-text {
  color: #333;
  font-size: 30rpx;
  font-weight: 500;
  flex: 1;
}

/* 消息内容 */
.message-content {
  color: #666;
  font-size: 26rpx;
  line-height: 1.6;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 相关信息 */
.related-info {
  display: flex;
  align-items: center;
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
  background-color: #f8f9fa;
  margin-left: -24rpx;
  margin-right: -24rpx;
  padding-left: 24rpx;
  padding-right: 24rpx;
  padding-bottom: 16rpx;
  border-radius: 0 0 16rpx 16rpx;
}

.info-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.info-text {
  color: #999;
  font-size: 24rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.empty-icon {
  width: 300rpx;
  height: 300rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.empty-text {
  color: #999;
  font-size: 28rpx;
}

/* 加载更多 */
.loading-more {
  text-align: center;
  padding: 40rpx 0;
}

.loading-text {
  color: #999;
  font-size: 26rpx;
}

/* 没有更多 */
.no-more {
  text-align: center;
  padding: 40rpx 0;
}

.no-more-text {
  color: #ccc;
  font-size: 24rpx;
}
