/* pages/reservation-detail/reservation-detail.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 140rpx;
}

/* 状态卡片 */
.status-card {
  margin: 20rpx;
  padding: 50rpx 30rpx;
  border-radius: 16rpx;
  text-align: center;
  color: #fff;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.1);
}

.status-PENDING {
  background: linear-gradient(135deg, #FFA726 0%, #FB8C00 100%);
}

.status-APPROVED {
  background: linear-gradient(135deg, #66BB6A 0%, #43A047 100%);
}

.status-REJECTED {
  background: linear-gradient(135deg, #EF5350 0%, #E53935 100%);
}

.status-CANCELLED {
  background: linear-gradient(135deg, #9E9E9E 0%, #757575 100%);
}

.status-COMPLETED {
  background: linear-gradient(135deg, #42A5F5 0%, #1E88E5 100%);
}

.status-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.status-text {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.status-tip {
  font-size: 26rpx;
  opacity: 0.9;
}

/* 通用section */
.section {
  margin: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  border-left: 6rpx solid #4CAF50;
}

/* 实验室卡片 */
.lab-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.lab-image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.lab-info {
  flex: 1;
}

.lab-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.lab-location,
.lab-capacity {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.lab-arrow {
  font-size: 60rpx;
  color: #ccc;
  margin-left: 20rpx;
}

/* 信息卡片 */
.info-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-row:last-child {
  margin-bottom: 0;
  padding-bottom: 0;
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #666;
  min-width: 140rpx;
  flex-shrink: 0;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  text-align: right;
  flex: 1;
  word-break: break-all;
}

.info-value.highlight {
  color: #4CAF50;
  font-weight: bold;
}

/* 文档列表 */
.documents {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.document-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.document-item:last-child {
  border-bottom: none;
}

.document-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.document-name {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.document-action {
  font-size: 26rpx;
  color: #4CAF50;
}

/* 拒绝原因卡片 */
.rejection-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  border-left: 6rpx solid #f44336;
}

.rejection-icon {
  font-size: 48rpx;
  margin-bottom: 20rpx;
}

.rejection-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.8;
}

/* 时间卡片 */
.time-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.time-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.time-row:last-child {
  margin-bottom: 0;
}

.time-label {
  font-size: 28rpx;
  color: #666;
}

.time-value {
  font-size: 28rpx;
  color: #999;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 20rpx;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.05);
  display: flex;
  gap: 20rpx;
  z-index: 100;
}

.action-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 12rpx;
  font-size: 30rpx;
  border: none;
}

.cancel-btn {
  background-color: #fff;
  color: #ff9800;
  border: 2rpx solid #ff9800;
}

.complete-btn {
  background: linear-gradient(135deg, #66BB6A 0%, #43A047 100%);
  color: #fff;
}
