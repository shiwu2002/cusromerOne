/* pages/forgot-password/forgot-password.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.header .icon {
  display: block;
  font-size: 120rpx;
  margin-bottom: 20rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 15rpx;
  text-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.subtitle {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

.form-section {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 50rpx 40rpx;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.1);
}

.input-group {
  margin-bottom: 30rpx;
  position: relative;
}

.input-label {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.input-label .icon {
  margin-right: 10rpx;
  font-size: 32rpx;
}

.input-field {
  width: 100%;
  height: 88rpx;
  background: #f5f7fa;
  border-radius: 10rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.input-field:focus {
  background: #ffffff;
  border-color: #1989fa;
}

.email-group {
  display: flex;
  gap: 15rpx;
}

.email-input {
  flex: 1;
}

.verify-btn {
  width: 180rpx;
  height: 88rpx;
  background: #1989fa;
  color: #ffffff;
  font-size: 24rpx;
  border-radius: 10rpx;
  border: none;
  padding: 0;
  line-height: 88rpx;
}

.verify-btn[disabled] {
  background: #ccc;
}

.verify-btn::after {
  border: none;
}

.toggle-password {
  position: absolute;
  right: 30rpx;
  bottom: 30rpx;
  font-size: 36rpx;
  cursor: pointer;
}

.reset-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  border-radius: 10rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.4);
  transition: all 0.3s;
  margin-top: 20rpx;
}

.reset-btn[disabled] {
  opacity: 0.6;
}

.reset-btn::after {
  border: none;
}

.back-section {
  text-align: center;
  margin-top: 30rpx;
}

.back-link {
  color: #1989fa;
  font-size: 28rpx;
  font-weight: 500;
}
