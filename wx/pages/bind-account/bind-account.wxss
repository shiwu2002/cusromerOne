/* pages/bind-account/bind-account.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx;
}

.header {
  text-align: center;
  margin: 60rpx 0 40rpx;
}

.header .icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 20rpx;
}

.header .title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 15rpx;
}

.header .desc {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

.tabs {
  display: flex;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 10rpx;
  padding: 8rpx;
  margin-bottom: 30rpx;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
  border-radius: 8rpx;
  transition: all 0.3s;
}

.tab.active {
  background: #ffffff;
  color: #667eea;
  font-weight: bold;
}

.form-section {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 50rpx 40rpx;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.1);
}

.input-group {
  margin-bottom: 30rpx;
  position: relative;
}

.input-label {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.input-label .icon {
  margin-right: 10rpx;
  font-size: 32rpx;
}

.input-field {
  width: 100%;
  height: 88rpx;
  background: #f5f7fa;
  border-radius: 10rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
  box-sizing: border-box;
}

.input-field:focus {
  background: #ffffff;
  border-color: #1989fa;
}

.toggle-password {
  position: absolute;
  right: 30rpx;
  bottom: 30rpx;
  font-size: 36rpx;
  cursor: pointer;
}

.code-input-wrapper {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.code-input {
  flex: 1;
}

.code-btn {
  width: 200rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: #1989fa;
  color: #ffffff;
  border-radius: 10rpx;
  font-size: 26rpx;
  padding: 0;
  border: none;
  box-sizing: border-box;
}

.code-btn.disabled {
  opacity: 0.6;
}

.code-btn::after {
  border: none;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  border-radius: 10rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.4);
  transition: all 0.3s;
  margin-top: 20rpx;
}

.submit-btn[disabled] {
  opacity: 0.6;
}

.submit-btn::after {
  border: none;
}

.tip {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 40rpx;
  padding: 30rpx;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 10rpx;
}

.tip-icon {
  font-size: 32rpx;
  margin-right: 10rpx;
}

.tip-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}
