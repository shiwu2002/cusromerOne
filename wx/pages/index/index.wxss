/* pages/index/index.wxss */
.container {
  background: #f5f7fa;
  min-height: 100vh;
  padding-bottom: 40rpx;
}

/* 轮播图 */
.banner-swiper {
  width: 100%;
  height: 360rpx;
  margin-bottom: 20rpx;
}

.banner-image {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

/* 快捷入口 */
.quick-menu {
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: #fff;
  padding: 40rpx 0;
  margin-top: 20rpx;
  border-radius: 20rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.menu-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.menu-icon {
  position: relative;
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  box-shadow: 0 8rpx 16rpx rgba(102, 126, 234, 0.3);
}

.menu-icon .iconfont {
  filter: brightness(2);
}

.badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  background: #ff4757;
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 20rpx;
  min-width: 32rpx;
  text-align: center;
  line-height: 1;
}

.menu-text {
  font-size: 24rpx;
  color: #333;
}

/* 公告栏 */
.notice-bar {
  display: flex;
  align-items: center;
  background: #fff3cd;
  padding: 20rpx 30rpx;
  margin: 20rpx;
  border-radius: 12rpx;
  border-left: 6rpx solid #ffc107;
}

.notice-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.notice-swiper {
  flex: 1;
  height: 40rpx;
}

.notice-text {
  font-size: 26rpx;
  color: #856404;
  line-height: 40rpx;
}

/* 通用区块 */
.section {
  margin: 20rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  position: relative;
  padding-left: 24rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 4rpx;
}

.section-more {
  font-size: 24rpx;
  color: #667eea;
}

/* 实验室列表 */
.lab-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.lab-card {
  display: flex;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  animation: slideInUp 0.4s ease forwards;
  opacity: 0;
}

.lab-card:nth-child(1) { animation-delay: 0.1s; }
.lab-card:nth-child(2) { animation-delay: 0.2s; }
.lab-card:nth-child(3) { animation-delay: 0.3s; }
.lab-card:nth-child(4) { animation-delay: 0.4s; }
.lab-card:nth-child(5) { animation-delay: 0.5s; }
.lab-card:nth-child(6) { animation-delay: 0.6s; }

@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.lab-card:active {
  opacity: 0.9;
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.15);
}

.lab-image {
  width: 200rpx;
  height: 200rpx;
  flex-shrink: 0;
}

.lab-info {
  flex: 1;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.lab-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.lab-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.lab-status {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  flex-shrink: 0;
}

.lab-status.status-available {
  background: rgba(82, 196, 26, 0.1);
}

.lab-status.status-available .status-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #52c41a;
  animation: pulse 2s ease-in-out infinite;
}

.lab-status.status-available .status-text {
  font-size: 22rpx;
  color: #52c41a;
}

.lab-status.status-unavailable {
  background: rgba(153, 153, 153, 0.1);
}

.lab-status.status-unavailable .status-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #999;
}

.lab-status.status-unavailable .status-text {
  font-size: 22rpx;
  color: #999;
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
    transform: scale(1);
  }
  50% {
    opacity: 0.6;
    transform: scale(1.2);
  }
}

.lab-location {
  font-size: 24rpx;
  color: #666;
}

.lab-meta {
  display: flex;
  gap: 24rpx;
}

.lab-capacity,
.lab-type {
  font-size: 22rpx;
  color: #999;
}

.lab-description {
  font-size: 24rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 骨架屏 */
.skeleton-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.skeleton-card {
  display: flex;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.skeleton-image {
  width: 200rpx;
  height: 200rpx;
  background: linear-gradient(90deg, #f2f2f2 25%, #e6e6e6 50%, #f2f2f2 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s ease-in-out infinite;
  flex-shrink: 0;
}

.skeleton-info {
  flex: 1;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.skeleton-line {
  height: 28rpx;
  background: linear-gradient(90deg, #f2f2f2 25%, #e6e6e6 50%, #f2f2f2 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s ease-in-out infinite;
  border-radius: 4rpx;
}

.skeleton-title {
  width: 60%;
  height: 32rpx;
}

.skeleton-text {
  width: 100%;
}

.skeleton-text.short {
  width: 40%;
}

@keyframes skeleton-loading {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  opacity: 0.3;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.empty-action {
  width: 100%;
  display: flex;
  justify-content: center;
}

.empty-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 28rpx;
  padding: 24rpx 60rpx;
  border-radius: 50rpx;
  border: none;
  box-shadow: 0 8rpx 16rpx rgba(102, 126, 234, 0.3);
}

.empty-btn::after {
  border: none;
}

/* 统计数据 */
.statistics-section {
  margin-top: 20rpx;
}

.statistics-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  padding: 30rpx 0;
  background: linear-gradient(135deg, #667eea08 0%, #764ba208 100%);
  border-radius: 16rpx;
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
}

.stat-item:active {
  transform: scale(0.95);
  background: linear-gradient(135deg, #667eea15 0%, #764ba215 100%);
  border-color: #667eea;
}

.stat-value {
  font-size: 44rpx;
  font-weight: bold;
  transition: all 0.3s ease;
}

.stat-value.stat-pending {
  color: #faad14;
}

.stat-value.stat-approved {
  color: #52c41a;
}

.stat-value.stat-completed {
  color: #1890ff;
}

.stat-value.stat-cancelled {
  color: #999;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
}
