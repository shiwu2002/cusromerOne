/* pages/index/index.wxss */
.container {
  background: #f5f7fa;
  min-height: 100vh;
  padding-bottom: 20rpx;
}

/* 轮播图 */
.banner-swiper {
  width: 100%;
  height: 360rpx;
}

.banner-image {
  width: 100%;
  height: 100%;
}

/* 快捷入口 */
.quick-menu {
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: #fff;
  padding: 40rpx 0;
  margin-top: 20rpx;
  border-radius: 20rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.menu-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.menu-icon {
  position: relative;
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  box-shadow: 0 8rpx 16rpx rgba(102, 126, 234, 0.3);
}

.menu-icon .iconfont {
  filter: brightness(2);
}

.badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  background: #ff4757;
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 20rpx;
  min-width: 32rpx;
  text-align: center;
  line-height: 1;
}

.menu-text {
  font-size: 24rpx;
  color: #333;
}

/* 公告栏 */
.notice-bar {
  display: flex;
  align-items: center;
  background: #fff3cd;
  padding: 20rpx 30rpx;
  margin: 20rpx;
  border-radius: 12rpx;
  border-left: 6rpx solid #ffc107;
}

.notice-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.notice-swiper {
  flex: 1;
  height: 40rpx;
}

.notice-text {
  font-size: 26rpx;
  color: #856404;
  line-height: 40rpx;
}

/* 通用区块 */
.section {
  margin: 20rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  position: relative;
  padding-left: 24rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 4rpx;
}

.section-more {
  font-size: 24rpx;
  color: #667eea;
}

/* 实验室列表 */
.lab-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.lab-card {
  display: flex;
  background: #f8f9fa;
  border-radius: 16rpx;
  overflow: hidden;
  transition: all 0.3s;
}

.lab-card:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.lab-image {
  width: 200rpx;
  height: 200rpx;
  flex-shrink: 0;
}

.lab-info {
  flex: 1;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.lab-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.lab-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.lab-status {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  background: rgba(102, 126, 234, 0.1);
}

.status-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
}

.status-dot.available {
  background: #52c41a;
}

.status-dot.unavailable {
  background: #999;
}

.status-text {
  font-size: 22rpx;
  color: #667eea;
}

.lab-location {
  font-size: 24rpx;
  color: #666;
}

.lab-meta {
  display: flex;
  gap: 24rpx;
}

.lab-capacity,
.lab-type {
  font-size: 22rpx;
  color: #999;
}

.lab-description {
  font-size: 24rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  opacity: 0.3;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 加载状态 */
.loading-state {
  display: flex;
  justify-content: center;
  padding: 40rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 统计数据 */
.statistics-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  padding: 30rpx 0;
  background: linear-gradient(135deg, #667eea15 0%, #764ba215 100%);
  border-radius: 16rpx;
}

.stat-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #667eea;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}
