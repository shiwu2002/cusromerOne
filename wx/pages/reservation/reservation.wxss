/* pages/reservation/reservation.wxss */
.container {
  padding-bottom: 140rpx;
  background-color: #f5f5f5;
}

/* 实验室信息卡片 */
.lab-card {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.lab-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.lab-info {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #666;
}

.info-item {
  margin: 0 10rpx;
}

.divider {
  color: #ddd;
}

/* 表单区域 */
.form-section {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.form-item {
  margin-bottom: 40rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.required {
  color: #f5222d;
  margin-right: 5rpx;
}

/* 日期选择器 */
.picker-value {
  padding: 20rpx 30rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
}

/* 时间段选择器 */
.timeslot-selector {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.timeslot-option {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.timeslot-option.selected {
  background-color: #e6f7ff;
  border-color: #1890ff;
}

.timeslot-option.disabled {
  opacity: 0.5;
  background-color: #fafafa;
}

.time-range {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.time-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.timeslot-option.selected .time-status {
  background-color: #1890ff;
  color: #fff;
}

.timeslot-option:not(.selected):not(.disabled) .time-status {
  background-color: #52c41a;
  color: #fff;
}

.timeslot-option.disabled .time-status {
  background-color: #d9d9d9;
  color: #666;
}

.empty-timeslot {
  padding: 60rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

/* 人数输入 */
.number-input {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.number-btn {
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #f5f5f5;
  border: 1rpx solid #d9d9d9;
  border-radius: 8rpx;
  font-size: 36rpx;
  color: #333;
  text-align: center;
  /* 优化点击体验 */
  transition: all 0.2s;
  display: flex;
  align-items: center;
  justify-content: center;
}

.number-btn-hover {
  background-color: #e6e6e6;
  transform: scale(0.95);
}

.number-value {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 30rpx;
  background-color: #fff; /* 更改背景色为白色，更像输入框 */
  border: 1rpx solid #d9d9d9; /* 添加边框 */
  border-radius: 8rpx;
  font-size: 32rpx; /* 字体稍微加大 */
  text-align: center;
  color: #333;
}

.form-tip {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #999;
}

/* 文本域 */
.textarea-input {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  font-size: 28rpx;
  line-height: 1.6;
  box-sizing: border-box;
}

.char-count {
  margin-top: 10rpx;
  text-align: right;
  font-size: 24rpx;
  color: #999;
}

/* 文档上传 */
.upload-area {
  margin-top: 10rpx;
}

.upload-list {
  margin-bottom: 20rpx;
}

.upload-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  margin-bottom: 10rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
}

.doc-name {
  flex: 1;
  font-size: 26rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.doc-remove {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 36rpx;
  color: #999;
  margin-left: 20rpx;
}

.upload-btn {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #f5f5f5;
  border: 2rpx dashed #d9d9d9;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #666;
  display: flex;
  align-items: center;
  justify-content: center;
}

.upload-icon {
  font-size: 36rpx;
  margin-right: 10rpx;
}

/* 预约须知 */
.notice-section {
  background-color: #fffbe6;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-left: 4rpx solid #faad14;
}

.notice-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #fa8c16;
  margin-bottom: 20rpx;
}

.notice-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
}

.notice-item {
  margin-bottom: 10rpx;
}

/* 底部按钮 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 20rpx;
  padding: 20rpx 30rpx;
  background-color: #fff;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.cancel-btn {
  flex: 1;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #fff;
  border: 2rpx solid #d9d9d9;
  border-radius: 45rpx;
  font-size: 32rpx;
  color: #666;
}

.submit-btn {
  flex: 2;
  height: 90rpx;
  line-height: 90rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border: none;
  border-radius: 45rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
}

.submit-btn[disabled] {
  opacity: 0.6;
}
