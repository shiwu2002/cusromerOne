/* pages/login/login.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.logo-section {
  text-align: center;
  margin-bottom: 80rpx;
}

.logo-text {
  font-size: 120rpx;
  display: block;
  margin-bottom: 30rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  text-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.form-section {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 50rpx 40rpx;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.1);
}

.input-group {
  margin-bottom: 30rpx;
  position: relative;
}

.input-label {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.input-label .icon {
  margin-right: 10rpx;
  font-size: 32rpx;
}

.input-field {
  width: 100%;
  height: 88rpx;
  background: #f5f7fa;
  border-radius: 10rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.input-field:focus {
  background: #ffffff;
  border-color: #1989fa;
}

.toggle-password {
  position: absolute;
  right: 30rpx;
  bottom: 30rpx;
  font-size: 36rpx;
  cursor: pointer;
}

.remember-forgot {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 30rpx 0 40rpx;
  font-size: 26rpx;
}

.remember {
  display: flex;
  align-items: center;
  color: #666;
}

.remember checkbox {
  margin-right: 10rpx;
}

.forgot-link {
  color: #1989fa;
  font-weight: 500;
}

.login-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  border-radius: 10rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.4);
  transition: all 0.3s;
}

.login-btn[disabled] {
  opacity: 0.6;
}

.login-btn::after {
  border: none;
}

.divider {
  display: flex;
  align-items: center;
  margin: 40rpx 0;
}

.divider-line {
  flex: 1;
  height: 1rpx;
  background: #e0e0e0;
}

.divider-text {
  padding: 0 20rpx;
  font-size: 26rpx;
  color: #999;
}

.wechat-login-btn {
  width: 100%;
  height: 88rpx;
  background: #07c160;
  color: #ffffff;
  border-radius: 10rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  box-shadow: 0 8rpx 20rpx rgba(7, 193, 96, 0.3);
  transition: all 0.3s;
  display: flex;
  align-items: center;
  justify-content: center;
}

.wechat-login-btn[disabled] {
  opacity: 0.6;
}

.wechat-login-btn::after {
  border: none;
}

.wechat-icon {
  font-size: 40rpx;
  margin-right: 10rpx;
}

.register-section {
  text-align: center;
  margin-top: 40rpx;
  font-size: 28rpx;
  color: #666;
}

.register-link {
  color: #1989fa;
  font-weight: 500;
  margin-left: 10rpx;
}
