/* pages/laboratory-detail/laboratory-detail.wxss */
.container {
  padding-bottom: 120rpx;
  background-color: #f5f5f5;
}

/* 实验室图片轮播 */
.lab-swiper {
  width: 100%;
  height: 450rpx;
}

.lab-image {
  width: 100%;
  height: 100%;
}

/* 基本信息区域 */
.info-section {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.lab-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.lab-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.lab-status {
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #fff;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-row:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #666;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.info-value.phone {
  color: #1890ff;
}

/* 描述区域 */
.description-section {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.description-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  text-align: justify;
}

/* 设备列表 */
.equipment-section {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.equipment-list {
  display: flex;
  flex-wrap: wrap;
}

.equipment-item {
  display: flex;
  align-items: center;
  width: 50%;
  margin-bottom: 15rpx;
}

.equipment-icon {
  font-size: 32rpx;
  color: #1890ff;
  margin-right: 10rpx;
}

.equipment-name {
  font-size: 28rpx;
  color: #666;
}

/* 时间段区域 */
.timeslot-section {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.date-selector {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.date-arrow {
  font-size: 28rpx;
  color: #1890ff;
  padding: 10rpx;
}

.current-date {
  font-size: 28rpx;
  color: #1890ff;
  font-weight: 500;
}

.timeslot-list {
  margin-top: 20rpx;
}

.timeslot-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx;
  margin-bottom: 15rpx;
  border-radius: 12rpx;
  border: 2rpx solid #e0e0e0;
  transition: all 0.3s;
}

.timeslot-item.available {
  background-color: #f0f9ff;
  border-color: #1890ff;
}

.timeslot-item.reserved {
  background-color: #f5f5f5;
  border-color: #d9d9d9;
}

.time-range {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.timeslot-item.reserved .time-range {
  color: #999;
}

.time-status {
  font-size: 26rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

.timeslot-item.available .time-status {
  background-color: #1890ff;
  color: #fff;
}

.timeslot-item.reserved .time-status {
  background-color: #d9d9d9;
  color: #666;
}

.empty-timeslot {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 20rpx 30rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.reserve-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
  border-radius: 45rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.unavailable-tip {
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 28rpx;
}
